<div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tbody>
          <tr></tr>
          <tr>
            <%= image_tag user.get_profile_image(100,100) %>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class='row'>
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block edit_user_18910" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h1>New Book</h1>
      <%= form_with model: book do |f| %>

        <h4>title</h4>
        <%= f.text_field :title %>

        <h4>opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book', class: "button" %>

      <% end %>
    </div>