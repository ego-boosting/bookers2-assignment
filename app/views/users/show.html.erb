<!-- ユーザーの詳細 -->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tbody>
          <tr>
            <%= image_tag @user.get_profile_image(100,100) %>
            <th>name</th>
            <th><%= @user.name %></th>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class='row'>
        <%= link_to edit_user_path, class: "btn btn-outline-secondary btn-block edit_user_18910" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      
      <h1>New Book</h1>
      <%= form_with model: @book do |f| %>
      
        <h4>title</h4>
        <%= f.text_field :title %>
        
        <h4>opinion</h4>
        <%= f.text_area :body %>
        
        <%= f.submit 'Create Book', class: "button" %>
        
      <% end %>
    </div>
    <!-- ユーザーの投稿一覧 -->
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td></td>
              <td>
                <%= link_to book.title, books_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
